<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_marginStart="16dp"
  android:layout_marginEnd="16dp"
  android:background="@drawable/bg_how_to_vote_header"
  android:padding="8dp">

  <FrameLayout
    android:id="@+id/ivFlagIcon"
    android:layout_width="24dp"
    android:layout_height="24dp"
    android:layout_marginTop="1dp"
    android:layout_marginStart="4dp"
    android:background="@drawable/background_accent_oval"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="@+id/tvPartyCount">

    <ImageView
      android:layout_width="12dp"
      android:layout_height="12dp"
      android:layout_gravity="center"
      android:src="@drawable/ic_flag_24"
      android:tint="@color/accent_20" />

  </FrameLayout>

  <TextView
    android:id="@+id/tvPartyCount"
    style="@style/TextLarge.Bold"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:text="@string/header_total_party_count"
    android:textColor="@color/text_primary"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@+id/ivFlagIcon"
    app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>